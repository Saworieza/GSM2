<p id="notice"><%= notice %></p>

<h1>Contractors</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contractors.each do |contractor| %>
      <tr>
        <td scope="row"><%= contractor.id %></td>
        <td><%= link_to contractor.name, contractor %></td>
        <td><%= contractor.description %></td>
        <td><%= link_to contractor.status.state, status_path(contractor.status) %></td>
        <td><%= link_to 'Edit', edit_contractor_path(contractor) %></td>
        <td><%= link_to 'Destroy', contractor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

