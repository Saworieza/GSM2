<p id="notice"><%= notice %></p>

<h1>Contractor Invoices</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Number</th>
      <th scope="col">Date</th>
      <th scope="col">Value</th>
      <th scope="col">Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contractorinvoices.each do |contractorinvoice| %>
      <tr>
        <td scope="row"><%= contractorinvoice.id %></td>
        <td><%= link_to contractorinvoice.number, contractorinvoice %></td>
        <td><%= contractorinvoice.date.strftime("%d %b, %Y") %></td>
        <td><%= contractorinvoice.stage.percentage %></td>
        <td><%= number_with_delimiter((contractorinvoice.contractorpo.amount / contractorinvoice.stage.percentage).round(2), :delimiter => ',') %></td>
        <td><%= link_to 'Edit', edit_contractorinvoice_path(contractorinvoice) %></td>
        <td><%= link_to 'Destroy', contractorinvoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

