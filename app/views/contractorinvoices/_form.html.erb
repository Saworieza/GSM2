    <%= form.label :milestone_id %>
    <%= form.collection_select :milestone_id, Milestone.all, :id, :phase %>
  </div> 

  <div class="field">
    <%= form.label :stage_id %>
    <%= form.grouped_collection_select :stage_id, Milestone.all, :stages, :phase, :id, :percentage %>
