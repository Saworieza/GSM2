<div class="row">
	<div class="col-lg-6">
		<h2>Unpaid Invoices</h2>
		<table class="table table-striped">
		  <thead>
		    <tr>
		      <th scope="col">Contractor</th>
		      <th scope="col">Unpaid Invoices</th>
		      <th colspan="3"></th>
		    </tr>
		  </thead>

		  <tbody>
				<% @contractors.each do |contractor| %>
					<% unless contractor.contractorinvoices.unpaid.empty? %>
						<tr>
							<td><%= contractor.name %></td>
							<td><%= contractor.contractorinvoices.unpaid.size %></td>
							<td><%= link_to 'Make Payment', payment_form_path(contractor.id) %></td>
						</tr>
					<% end %>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="col-lg-6">
		<h2>Payments Made</h2>
		<table class="table table-striped">
		  <thead>
		    <tr>
		      <th scope="col">#</th>
		      <th scope="col">Contractor</th>
		      <th scope="col">Amount</th>
		      <th scope="col">Date</th>
		      <th colspan="3"></th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @payments.each do |payment| %>
		      <tr>
		        <td scope="row"><%= payment.id %></td>
		        <td><%= link_to payment.contractor.name, payment %></td>
		        <td><%= payment.amount %></td>
		        <td><%#= link_to contractor.status.state, status_path(contractor.status) %></td>
		        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
		        <td><%#= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>

		<br>
	</div>
</div>


