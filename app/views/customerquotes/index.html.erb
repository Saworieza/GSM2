<p id="notice"><%= notice %></p>

<h1>Customerquotes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <!-- <th>Date</th> -->
      <th scope="col">Amount</th>
      <th scope="col">Costcenter</th>
      <th scope="col">CPO number</th>
      <th scope="col">Scope</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @customerquotes.each do |customerquote| %>
      <tr>
        <td><%= link_to customerquote.id, customerquote %></td>
        <td><%= customerquote.name %></td>
        <!-- <td><%#= customerquote.date %></td> -->
        <td><%= customerquote.amount %></td>
        <td><%= customerquote.costcenter.number %></td>
        <% customerquote.customerpos.each do |cpo| %>
          <td><%= link_to cpo.number %></td><%# , customerpo_path(customerpo)%>
          <td><%= link_to cpo.scope.scope_type, scope_path(cpo.scope) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

