<p id="notice"><%= notice %></p>

<h1>Customerquotes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Date</th>
      <th scope="col">Amount</th>
      <th scope="col">Costcenter</th>
      <th scope="col">CPO number</th>
      <th scope="col">Scope</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @customerquotes.each do |customerquote| %>
      <tr>
        <td><%= customerquote.id %></td>
        <td><%= link_to customerquote.name, customerquote %></td>
        <td><%= customerquote.date %></td>
        <td><%= customerquote.amount %></td>
        <td><%= customerquote.costcenter.number %></td>
        <!-- <td><%#= customerquote.customerpo.number unless customerquote.customerpo.blank? %></td> -->
        <%#= @foo.text unless @foo.blank? %>
        <td>
          <% customerquote.customerpos.each do |customerpo| %>
            <%= link_to customerpo.number, customerpo %><%# %>
          <% end %>
        </td>
        <td><%= customerquote.scope.scope_type %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customerquote', new_customerquote_path %>

