<p id="notice"><%= notice %></p>

<h1>Contracts</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Amount</th>
      <th scope="col">Contractor</th>
      <th scope="col">Site</th>
      <th scope="col">Contractorpos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contracts.each do |contract| %>
      <tr>
        <td scope="row"><%= contract.id %></td>
        <td><%= contract.amount %></td>
        <td><%= link_to contract.contractor.name, contractor_url(contract.contractor) %></td>
        <td><%= link_to contract.site.name, site_url(contract.site) %></td>
        <td><%= link_to contract.contractorpo.number, contractorpo_url(contract.contractorpo) %></td>
        <td><%= link_to 'Show', contract %></td>
        <td><%= link_to 'Edit', edit_contract_path(contract) %></td>
        <!-- <td><%#= link_to 'Destroy', contract, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

