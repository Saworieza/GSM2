<%= form_with(model: milestone, local: true) do |f| %>
  <% if milestone.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(milestone.errors.count, "error") %> prohibited this milestone from being saved:</h2>

      <ul>
      <% milestone.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :phase %>
    <%= f.text_field :phase %>
  </div>

  <h3>stages</h3>
  <div id="stages">
    <%= f.fields_for :stages do |stage| %>
      <%= render 'stage_fields', f: stage %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'add stage', f, :stages %>
    </div>
  </div>



  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
