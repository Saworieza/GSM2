<%= form_with(model: site, local: true) do |form| %>
  <% if site.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(site.errors.count, "error") %> prohibited this site from being saved:</h2>

      <ul>
      <% site.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :number %>
    <%= form.text_field :number %>
  </div>

  <div class="field">
    <%= form.label :tower_height %>
    <%= form.number_field :tower_height %>
  </div>

  <div class="field">
    <%= form.label :status_id %>
    <%#= form.text_field :status_id %>
    <%= form.collection_select :status_id, Status.all, :id, :state %>
  </div>

  <div class="field">
    <%= form.label :scope_id %>
    <%#= form.text_field :scope_id %>
    <%= form.collection_select :scope_id, Scope.all, :id, :scope_type %>
  </div>

  <div class="field">
    <%= form.label :region_id %>
    <%#= form.text_field :region_id %>
    <%= form.collection_select :region_id, Region.order(:name), :id, :name %>
  </div>

  <div class="field">
    <%= form.label :town_id %>
    <%#= form.text_field :town_id %>
    <%#= form.collection_select :town_id, Town.order(:name), :id, :name %>
    <%= form.grouped_collection_select :town_id, Region.order(:name), :towns, :name, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :customerquote_id %>
    <%#= form.text_field :customerquote_id %>
    <%= form.collection_select :customerquote_id, Customerquote.all, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :customerpo_id %>
    <%#= form.text_field :customerpo_id %>
    <%= form.collection_select :customerpo_id, Customerpo.all, :id, :number %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
